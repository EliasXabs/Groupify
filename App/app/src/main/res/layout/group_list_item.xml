<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@drawable/group_item_card"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/groupImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:contentDescription="TODO"
        android:foreground="@drawable/image_border"
        android:maxWidth="350dp"
        android:maxHeight="175dp"
        android:minWidth="350dp"
        android:minHeight="150dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/group_default_image"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/groupSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.3"
        android:fontFamily="@font/worksans_medium"
        android:paddingLeft="20dp"
        android:text="Music club fans"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/groupNumberOfMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/group_card_members_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/worksans_regular"
            android:text="151" />
    </LinearLayout>

</LinearLayout>